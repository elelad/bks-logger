{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"declaration": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"lib": [
			"dom",
			"es2017"
		],
		"module": "es2015",
		"moduleResolution": "node",
		"sourceMap": true,
		"target": "es5",
		"watch": true,
		"typeRoots": [
			"../node_modules/@types"
		],	
		"baseUrl": "src",
		"paths": {			
			"@app/*": [
				"app/*"
			],
			"@assets/*": [
				"assets/*"
			],
			"@env": [
				"environments/environment"
			],
			"@components/*": [
				"components/*"
			],
			"@pages/*": [
				"pages/*"
			],
			"@providers/*": [
				"providers/*"
			],
			"@services/*": [
				"services/*"
			],
			"@tests/*": [
				"./*"
			],
			"@theme/*": [
				"theme/*"
			]
		},
    "resolveJsonModule": true,
    "esModuleInterop": true
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"src/**/*.spec.ts",
		"src/**/__tests__/*.ts"
	],
	"compileOnSave": false,
	"atom": {
		"rewriteTsconfig": false
	}
}